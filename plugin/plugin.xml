<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.newWizards">
      <wizard
            class="com.dhcc.ms.plugin.datatype.DatatypeWizard"
            icon="icons/sample.png"
            id="RestCodeGenerator.wizard2"
            name="New Datatype Class">
      </wizard>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            category="Datatype"
            class="com.dhcc.ms.plugin.datatype.preferences.DatatypePreferencePage"
            id="RestCodeGenerator.page1"
            name="Datatype">
      </page>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="com.dhcc.ms.plugin.datatype.preferences.PreferenceInitializer">
      </initializer>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="com.dhcc.ms.plugin.datatype.DatatypeWizardHandler"
            commandId="com.dhcc.ms.plugin.datatype.command.DatatypeWizard">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="com.dhcc.ms.plugin.datatype.command.DatatypeWizard"
            name="DatatypeWizard">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               id="com.dhcc.ms.plugin.datatype.menu.Datatype"
               label="Datatype"
               mnemonic="D">
            <command
                  commandId="com.dhcc.ms.plugin.datatype.command.DatatypeWizard"
                  id="com.dhcc.ms.plugin.datatype.menu.NewClass"
                  label="New Class"
                  mnemonic="N"
                  style="push">
                  <visibleWhen  checkEnabled="false">
                        <with variable="selection">
                              <count value="1">
                              </count>
                              <iterate operator="and" ifEmpty="false">
	                              <adapt type="org.eclipse.core.resources.IProject">
	                              </adapt>
                              </iterate>
                  	    </with>
                  </visibleWhen>
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="com.dhcc.ms.plugin.datatype.toolbar.Datatype"
               label="Datatype">
            <command
                  commandId="com.dhcc.ms.plugin.datatype.command.DatatypeWizard"
                  icon="icons/sample.png"
                  id="com.dhcc.ms.plugin.datatype.toolbar.NewClass"
                  label="New Class"
                  style="push">
               <visibleWhen
                     checkEnabled="false">
                  <with
                        variable="selection">
                     <count
                           value="1">
                     </count>
                     <iterate
                           ifEmpty="false"
                           operator="and">
                        <adapt
                              type="org.eclipse.core.resources.IProject">
                        </adapt>
                     </iterate>
                  </with>
               </visibleWhen>
            </command>
         </toolbar>
      </menuContribution>
   </extension>

</plugin>
